cdl_package OROPKG_SUPPORT_FUSION {
    display "Support FUSION Installation"
    parent OROPKG_SUPPORT

    description " 
The presence of this package indicates that the configure
script detected a valid FUSION installation, which can now
be used by other packages."
    cdl_option OROBLD_SUPPORT_FUSION_DIR {
	display "FUSION installation directory"
	description "
The FUSION installation path, typically
/usr/realtime or /usr/local/realtime."
	flavor data
	default_value { "@FUSION_DIR@" }
    }
    cdl_option OROBLD_SUPPORT_FUSION_LINUX_KERNEL {
	display "Linux kernel directory"
	description "
The path to the patched Linux kernel, typically
/usr/src/linux. This path is used to build kernel modules."
	flavor data
	default_value { "@LINUX_KERNEL_DIR@" }
    }
    cdl_option OROBLD_SUPPORT_FUSION_LINUX_HEADERS {
	display "Linux headers directory"
	description "
The path to the patched Linux kernel headers, typically
/usr/src/linux/include or /usr/include. This path is
added as include path to the Orocos build flags."
	flavor data
	default_value { "@LINUX_KERNEL_HEADERS@" }
    }
    cdl_option OROBLD_SUPPORT_FUSION_VERSION {
	display "Detected FUSION Version"
	flavor data
	default_value { "@FUSION_VERSION@" }
    }
}